{
    "compilerOptions": {
      "rootDir": "./src",                           /* Specify the root directory of your source files */
      "outDir": "./dist",                        /* Specify the output directory for transpiled files */
      "module": "CommonJS",                         /* Specify module code generation: 'CommonJS' for Node.js */
      "target": "ESNext",                           /* Specify ECMAScript target version */
      "esModuleInterop": true,                      /* Enables emit interoperability between CommonJS and ES Modules */
      "moduleResolution": "Node",                   /* Specify module resolution strategy */
      "sourceMap": false,                           /* Disable source maps (optional, for production build) */
      "allowSyntheticDefaultImports": true,         /* Allow default imports from modules with no default export */
      "experimentalDecorators": true,               /* Enable experimental support for decorators */
      "resolveJsonModule": true                     /* Enable importing JSON files directly */
    },
    "include": [
      "src/**/*.ts"                                /* Include TypeScript files in 'src' directory and subdirectories */
    ],
    "exclude": [
      "node_modules"                               /* Exclude 'node_modules' directory */
    ]
  }
  